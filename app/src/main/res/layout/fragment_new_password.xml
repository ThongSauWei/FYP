<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/passwordRecoveryPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".NewPassword">

    <!-- Back Button Icon -->
    <ImageView
        android:id="@+id/btnExitNewPassword"
        android:layout_width="28dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/arrow_back"
        android:contentDescription="@string/go_back" />

    <!-- Title -->

    <!-- Logo -->

    <TextView
        android:id="@+id/tvTitleNewPassword"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/btnExitNewPassword"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@+id/btnExitNewPassword"
        android:fontFamily="@font/caveat"
        android:text="@string/new_password_title"
        android:textColor="@color/title_color"
        android:textSize="32sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgLogoPasswordRecovery"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnExitNewPassword"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/tarumt_logo" />

    <!-- Email Label -->
    <TextView
        android:id="@+id/lblNewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgLogoPasswordRecovery"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/abhayalibre_semibold"
        android:text="@string/new_password"
        android:textColor="@color/white"
        android:textSize="19sp" />

    <!-- Email Input Field -->
    <EditText
        android:id="@+id/txtNewPassword"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/lblNewPassword"
        android:layout_marginTop="5dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edittext_background"
        android:hint="@string/new_password"
        android:fontFamily="@font/abhayalibre_semibold"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/grey" />

    <!-- Security Question Label -->
    <TextView
        android:id="@+id/lblConfirmPasswordNewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtNewPassword"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/abhayalibre_semibold"
        android:text="@string/confirm_password_title"
        android:textColor="@color/white"
        android:textSize="19sp" />

    <!-- Security Question Input Field -->
    <EditText
        android:id="@+id/txtConfirmPasswordNewPassword"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/lblConfirmPasswordNewPassword"
        android:layout_marginTop="5dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edittext_background"
        android:hint="@string/confirm_password_title"
        android:fontFamily="@font/abhayalibre_semibold"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/grey" />

    <!-- Submit Button -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewBtnNewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtConfirmPasswordNewPassword"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/button_grey">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSubmitNewPassword"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/button_bg"
            android:fontFamily="@font/abhayalibre_semibold"
            android:padding="10dp"
            android:text="@string/prc_submit"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>
</RelativeLayout>
