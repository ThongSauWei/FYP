<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".FilterPost">

    <TextView
        android:id="@+id/lblLinkCreatePost"
        android:layout_width="105dp"
        android:layout_height="27dp"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/abhayalibre_semibold"
        android:text="@string/filter"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/abhayalibre_semibold"
        android:text="@string/select_a_category"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/lblLinkCreatePost"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/lblLinkCreatePost"
        app:layout_constraintTop_toBottomOf="@+id/lblLinkCreatePost" />

    <androidx.cardview.widget.CardView
        android:id="@+id/bussCard"
        android:layout_width="71dp"
        android:layout_height="30dp"
        android:layout_marginTop="18dp"
        app:cardCornerRadius="7dp"
        app:cardBackgroundColor="@color/box"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

            <TextView
                android:id="@+id/tvBuss"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/abhayalibre_medium"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/business"
                android:textColor="@color/white" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/sciCard"
        android:layout_width="71dp"
        android:layout_height="30dp"
        android:layout_marginStart="12dp"
        app:cardCornerRadius="7dp"
        app:cardBackgroundColor="@color/box"
        app:layout_constraintBottom_toBottomOf="@+id/bussCard"
        app:layout_constraintStart_toEndOf="@+id/bussCard"
        app:layout_constraintTop_toTopOf="@+id/bussCard"
        app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/tvSci"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/abhayalibre_medium"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/sci"
                android:textColor="@color/white" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/artCard"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginStart="13dp"
        app:cardBackgroundColor="@color/box"
        app:cardCornerRadius="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/sciCard"
        app:layout_constraintStart_toEndOf="@+id/sciCard"
        app:layout_constraintTop_toTopOf="@+id/sciCard"
        app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/tvArt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/abhayalibre_medium"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/art"
                android:textColor="@color/white" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/itCard"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/box"
        app:cardCornerRadius="7dp"
        app:layout_constraintStart_toStartOf="@+id/studyBuddyCard"
        app:layout_constraintTop_toBottomOf="@+id/studyBuddyCard">

            <TextView
                android:id="@+id/tvIt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/abhayalibre_medium"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/it"
                android:textColor="@color/white" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/sportCard"
        android:layout_width="58dp"
        android:layout_height="30dp"
        android:layout_marginStart="14dp"
        app:cardBackgroundColor="@color/box"
        app:cardCornerRadius="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/artCard"
        app:layout_constraintStart_toEndOf="@+id/artCard"
        app:layout_constraintTop_toTopOf="@+id/artCard">

            <TextView
                android:id="@+id/tvSport"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/abhayalibre_medium"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/sport"
                android:textColor="@color/white" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/langCard"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/box"
        app:cardCornerRadius="7dp"
        app:layout_constraintStart_toStartOf="@+id/bussCard"
        app:layout_constraintTop_toBottomOf="@+id/bussCard">

                    <TextView
                        android:id="@+id/tvLang"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/abhayalibre_medium"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/lang"
                        android:textColor="@color/white" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/assCard"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        app:cardCornerRadius="7dp"
        app:cardBackgroundColor="@color/box"
        app:layout_constraintBottom_toBottomOf="@+id/langCard"
        app:layout_constraintStart_toEndOf="@+id/langCard"
        app:layout_constraintTop_toTopOf="@+id/langCard">

                <TextView
                    android:id="@+id/tvAss"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/abhayalibre_medium"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/assignment"
                    android:textColor="@color/white" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/revisionCardCard"
        android:layout_width="85dp"
        android:layout_height="33dp"
        android:layout_marginStart="17dp"
        app:cardCornerRadius="7dp"
        app:cardBackgroundColor="@color/box"
        app:layout_constraintBottom_toBottomOf="@+id/assCard"
        app:layout_constraintStart_toEndOf="@+id/assCard"
        app:layout_constraintTop_toTopOf="@+id/assCard"
        app:layout_constraintVertical_bias="0.0">

                <TextView
                    android:id="@+id/tvRevision"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/abhayalibre_medium"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/revision"
                    android:textColor="@color/white" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/studyBuddyCard"
        android:layout_width="138dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/box"
        app:cardCornerRadius="7dp"
        app:layout_constraintStart_toStartOf="@+id/bussCard"
        app:layout_constraintTop_toBottomOf="@+id/langCard">

                <TextView
                    android:id="@+id/tvStudyBuddy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/abhayalibre_medium"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/studyBuddy"
                    android:textColor="@color/white" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/helperCard"
        android:layout_width="98dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        app:cardCornerRadius="7dp"
        app:cardBackgroundColor="@color/box"
        app:layout_constraintBottom_toBottomOf="@+id/studyBuddyCard"
        app:layout_constraintStart_toEndOf="@+id/studyBuddyCard"
        app:layout_constraintTop_toTopOf="@+id/studyBuddyCard"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/tvHelper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/abhayalibre_medium"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/helper"
            android:textColor="@color/white" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/otherCard"
        android:layout_width="61dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        app:cardCornerRadius="7dp"
        app:cardBackgroundColor="@color/box"
        app:layout_constraintBottom_toBottomOf="@+id/helperCard"
        app:layout_constraintStart_toEndOf="@+id/helperCard"
        app:layout_constraintTop_toTopOf="@+id/helperCard"
        app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/tvOther"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/abhayalibre_medium"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/other"
                android:textColor="@color/white" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="83dp"
        android:fontFamily="@font/abhayalibre_semibold"
        android:text="@string/select_date"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/studyBuddyCard" />

    <androidx.cardview.widget.CardView
        android:id="@+id/fewDayCard"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="7dp"
        app:cardBackgroundColor="@color/box"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

                <TextView
                    android:id="@+id/tvFewDay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/abhayalibre_medium"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/few_ago"
                    android:textColor="@color/white" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/weekCard"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginStart="17dp"
        app:cardCornerRadius="7dp"
        app:cardBackgroundColor="@color/box"
        app:layout_constraintBottom_toBottomOf="@+id/fewDayCard"
        app:layout_constraintStart_toEndOf="@+id/fewDayCard"
        app:layout_constraintTop_toTopOf="@+id/fewDayCard"
        app:layout_constraintVertical_bias="0.0">

                <TextView
                    android:id="@+id/tvWeek"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/abhayalibre_medium"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/week_ago"
                    android:textColor="@color/white" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/monthCard"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        app:cardCornerRadius="7dp"
        app:cardBackgroundColor="@color/box"
        app:layout_constraintBottom_toBottomOf="@+id/weekCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.148"
        app:layout_constraintStart_toEndOf="@+id/weekCard"
        app:layout_constraintTop_toTopOf="@+id/weekCard"
        app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/tvMonth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/abhayalibre_medium"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/month_ago"
                android:textColor="@color/white" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textViewCustom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/abhayalibre_medium"
        android:text="@string/custom_date"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/fewDayCard" />

    <TextView
        android:id="@+id/textViewFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/abhayalibre_medium"
        android:text="@string/from_date"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewCustom"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewCustom"
        app:layout_constraintTop_toBottomOf="@+id/textViewCustom" />
    <DatePicker
        android:id="@+id/fromDatePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <DatePicker
        android:id="@+id/untilDatePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:ems="10"
        android:fontFamily="@font/abhaya_libre"
        android:inputType="none"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewFrom"
        app:layout_constraintStart_toEndOf="@+id/textViewFrom"
        app:layout_constraintTop_toTopOf="@+id/textViewFrom"
        app:layout_constraintVertical_bias="0.476" />

    <ImageView
        android:id="@+id/calenderFromDate"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="7dp"
        android:contentDescription="@string/calendar"
        android:src="@drawable/baseline_calendar_today_24"
        app:layout_constraintBottom_toBottomOf="@+id/editTextDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editTextDate"
        app:layout_constraintVertical_bias="0.375" />


    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/abhayalibre_medium"
        android:text="@string/until_date"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewFrom"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewFrom"
        app:layout_constraintTop_toBottomOf="@+id/textViewFrom" />

    <EditText
        android:id="@+id/editTextUntil"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="@color/white"
        android:fontFamily="@font/abhaya_libre"
        android:inputType="date"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView10"
        app:layout_constraintStart_toStartOf="@+id/editTextDate"
        app:layout_constraintTop_toTopOf="@+id/textView10" />

    <ImageView
        android:id="@+id/calenderUntilDate"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="2dp"
        android:contentDescription="@string/calendar"
        android:src="@drawable/baseline_calendar_today_24"
        app:layout_constraintBottom_toBottomOf="@+id/editTextUntil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editTextUntil"
        app:layout_constraintVertical_bias="0.352" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewBtnFilterFilterPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="@+id/editTextUntil"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView10">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnFilterFilterPost"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="#8B8B8B"
            android:fontFamily="@font/abhayalibre_extrabold"
            android:text="@string/filter"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="579dp" />

    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>