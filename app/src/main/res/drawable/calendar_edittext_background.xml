<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" /> <!-- Updated radius -->
            <solid android:color="#33000000" /> <!-- Shadow color with transparency -->
        </shape>
    </item>

    <!-- Main Background Layer -->
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" /> <!-- Updated radius -->
            <gradient
                android:startColor="#FFFFFF"
                android:endColor="#E0E0E0"
                android:angle="90" />
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>

    <!-- Calendar Icon Layer -->
    <item android:gravity="end|center_vertical" android:right="10dp">
        <bitmap
            android:src="@drawable/cld"
        android:gravity="end|center_vertical"
        android:tileMode="disabled"
        android:width="24dp"
        android:height="27dp" />
    </item>

</layer-list>
